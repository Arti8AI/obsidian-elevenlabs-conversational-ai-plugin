{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"env": { 
		"node": true,
		"es6": true,
		"browser": true
	},
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"rules": {
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": ["warn", { "args": "none" }],
		"no-console": "warn",
		"prefer-const": "error"
	},
	"ignorePatterns": ["**/*.js", "**/*.d.ts", "main.js", "*.config.*"]
}